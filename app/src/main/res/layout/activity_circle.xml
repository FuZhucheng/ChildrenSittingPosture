<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:Android="http://schemas.android.com/tools"
    android:id="@+id/circle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <com.android.administrator.childrensittingposture.view.DrawCircle
        android:layout_width="240dp"
        android:layout_height="240dp"
        app:firstColor="#e64c65"
        app:secondColor="#4fc1e9"
        app:circleWidth="28dp"
        app:speed="20"
        ></com.android.administrator.childrensittingposture.view.DrawCircle>

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:orientation="vertical"
        android:background="#00000000">
        <TextView
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:background="#00000000"/>
        <LinearLayout
            android:layout_width="186dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/circle"
            android:orientation="vertical">
            <TextView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:background="#00000000"/>
            <TextView
                android:id="@+id/tv_studyOrRest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STUDY"
                Android:typeface="monospace"
                android:textSize="35sp"
                android:background="#00000000"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#00000000">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:background="#00000000"/>
                <TextView
                    android:id="@+id/tv_studyOrRestTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:text="1:03:50"
                    android:textColor="@color/white"
                    Android:typeface="serif"
                    android:textSize="26sp"/>
            </LinearLayout>
        </LinearLayout>
       <TextView
           android:layout_width="50dp"
           android:layout_height="25dp"
           android:background="#00000000"/>
    </LinearLayout>

</FrameLayout>

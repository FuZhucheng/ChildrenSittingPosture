<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="firstColor" format="color" />
    <attr name="secondColor" format="color" />
    <attr name="circleWidth" format="dimension" />
    <attr name="speed" format="integer" />

    <declare-styleable name="CustomProgressBar">
        <attr name="firstColor" />
        <attr name="secondColor" />
        <attr name="circleWidth" />
        <attr name="speed" />
    </declare-styleable>


    <declare-styleable name="MyClockStyleable">
        <attr name="clock" format="reference"/>
        <attr name="hour" format="reference"/>
        <attr name="minute" format="reference"/>
        <attr name="second" format="reference"/>
        <attr name="center_clock" format="reference"/>
    </declare-styleable>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.administrator.childrensittingposture">
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:label="@string/app_name">
        <activity android:name=".activity.MainActivity" android:theme="@style/MyTheme"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.HistoryActivity" android:theme="@style/MyTheme"/>
        <activity android:name=".activity.SettingActivity" android:theme="@style/MyTheme"></activity>
    </application>

</manifest>
